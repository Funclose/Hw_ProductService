@using Hw_ProductService.Controllers;

@model Product

<h1>Product</h1>

<form asp-action="EditProduct" method="post">
	<input type="hidden" asp-for="Id" />

	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Price"></label>
		<input asp-for="Price" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Category"></label>
		<select asp-for="Category" class="form-select">
			@foreach (string item in ViewBag.Categories)
			{
				if (Model.Category.Equals(item))
				{
					<option selected="true">@item</option>
				}
				else
				{
					<option>@item</option>
				}
			}
		</select>
		
	</div>
	<div class="form-group">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" class="form-control"></textarea>
	</div>
	<div class="form-group d-inline-block mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
		<a asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancel</a>
	</div>
</form>